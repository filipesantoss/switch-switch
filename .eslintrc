{
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "env": {
        "node": true,
        "es6": true
    },
    "globals": {},
    "rules": {
        "strict": [2, "global"],
        "linebreak-style": ["error", "unix"],
        "semi": [2, "always"],
        "quotes": [2, "single", "avoid-escape"],
        "eqeqeq": [2, "smart"],
        "brace-style": [2, "1tbs"],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "space-before-blocks": [1, "always"],
        "no-console": "off",
        "no-return-await": 1,
        "key-spacing": [
            2,
            {
                "beforeColon": false,
                "afterColon": true,
                "mode": "minimum"
            }
        ],
        "rules": {
            "prettier/prettier": "error"
        }
    },
    "plugins": []
}
